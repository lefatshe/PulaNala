                                document.getElementById('g-recaptcha-response-token-form_ruHIBQmisDltyMEA').value = token
                                console.log('Recapthca initialized');
                                $(e.currentTarget).trigger('submit', {'lots_of_stuff_done': true});
                            });
                        });
                                            }
                    
                }
            });

            clearInterval(waitForJQuery_ruHIBQmisDltyMEA);
        }
    }, 500);

